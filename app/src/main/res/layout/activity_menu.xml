<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"> <!-- TODO: Alterar para uma medida convencional -->

        <Button
            android:id="@+id/btnPreviousDifficulty"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_keyboard_arrow_left_black_36dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:padding="3dp"
            android:background="@drawable/startshape">

            <LinearLayout
                android:id="@+id/btnStartGame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="true">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:text="PLAY"
                    android:textColor="@color/primaryText"
                    android:textSize="35sp"
                    android:gravity="center"
                    android:background="#07000000"
                    android:shadowColor="#000000"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="3"/>
                <TextView
                    android:id="@+id/txt_diff"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="MMMMMMMMMM"
                    android:textColor="#DEDEDE"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#07000000"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btnNextDifficulty"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_keyboard_arrow_right_black_36dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinueGame"

        android:text="Continue"
        android:textColor="@color/primaryText"
        android:textSize="20sp"

        android:layout_marginTop="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="3dp"
        android:background="@drawable/startshape"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnSettings"

            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/settings_gear"/>

        <Button
            android:id="@+id/btnHighscores"
            android:layout_width="50dp"
            android:layout_marginStart="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_grade_black_48dp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menuHighestScore"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtHighestScore"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/boxshape"/>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/menuAnswerStreak"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAnswerStreak"
        android:layout_marginTop="10dp"
        android:minWidth="200dp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:textSize="30sp"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:background="@drawable/boxshape"/>

</LinearLayout>
