<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="#cfd8dc" android:padding="5sp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_tophighscorebydifficulty_difficulty"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            android:textColor="#263238"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_tophighscorebydifficulty_playername"
            android:textSize="18sp"
            android:textColor="#263238"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_tophighscorebydifficulty_score"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#d84315"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:background="@drawable/ic_spellcheck_black_48dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:id="@+id/txt_tophighscorebydifficulty_streak"
                android:textSize="18sp"
                android:textColor="#263238"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>