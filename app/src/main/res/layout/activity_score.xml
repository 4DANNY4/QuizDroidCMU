<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtScorePlayerName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/textIconsColor"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:text="Player name"/>

    <TextView
        android:id="@+id/txtViewScore"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Score"
        android:textSize="20sp"
        android:textColor="@color/accentColor"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtScore"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/primaryText"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Score"
        android:background="@drawable/boxshape"/>

    <TextView
        android:id="@+id/txtNewScore"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:text="New HighScore"
        android:visibility="gone"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="4dp"
        android:background="@drawable/hor_line"/>

    <!-- AFTER LINE! -->

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Difficulty"/>
            <TextView
                android:id="@+id/txtScoreDifficulty"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/boxshape"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Difficulty"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginStart="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtViewStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Streak"/>
            <TextView
                android:id="@+id/txtScoreCorrectAnswers"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/boxshape"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:text="CorrectAnswers"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Game Type"/>
            <TextView
                android:id="@+id/txtScoreUnlimited"
                android:layout_marginTop="5dp"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/boxshape"
                android:textColor="@color/primaryText"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Normal"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btnEndMenu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_menu_black_48dp"/>

        <Button
            android:id="@+id/btnEndHighscores"
            android:layout_width="50dp"
            android:layout_marginStart="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/ic_grade_black_48dp" />
    </LinearLayout>

</LinearLayout>
