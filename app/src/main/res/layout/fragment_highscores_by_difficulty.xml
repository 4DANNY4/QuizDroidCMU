<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context="estg.ipp.pt.quizdroidcmu.HighscoresByDifficulty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnHighscoresPrevious"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ic_keyboard_arrow_left_black_36dp"/>
        <TextView
            android:id="@+id/txt_tophighscore_difname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/textIconsColor"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="3"/>
        <Button
            android:id="@+id/btnHighscoresNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@drawable/ic_keyboard_arrow_right_black_36dp"/>

    </LinearLayout>

    <ListView
        android:layout_margin="5dp"
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textStyle="bold"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"/>

</LinearLayout>
