<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="estg.ipp.pt.quizdroidcmu.ListActivity"
    android:orientation="vertical"
    android:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_title"
            android:text="LISTING"
            android:textColor="@color/accentColor"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>
        <Button
            android:id="@+id/btnGotoAddQuestion"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_add_black_48dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnGotoAddDifficulty"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_add_black_48dp"
            android:visibility="gone"/>
        <Button
            android:id="@+id/btnGotoAddCategory"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/ic_add_black_48dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/hor_line"/>

    <ListView
        android:id="@android:id/list"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:longClickable="true">
    </ListView>

    <TextView
        android:id="@android:id/empty"
        android:textColor="@color/textIconsColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="List is empty!"/>

</LinearLayout>
